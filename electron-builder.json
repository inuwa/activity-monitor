{
    "productName": "angular-electron",
    "directories": {
        "output": "release/"
    },
    "extraResources": [
        {
            "from": "activities-processing/read-activities.js",
            "to": "activities-processing/read-activities.js"
        },
        {
            "from": "activities-processing/activity-db.js",
            "to": "activities-processing/activity-db.js"
        },
        {
            "from": "file-processing/file-maker.js",
            "to": "file-processing/file-maker.js"
        },
        {
            "from": "file-processing/template-creator.js",
            "to": "file-processing/template-creator.js"
        }
    ],
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json",
        "activities-processing${/*}",
        "constants${/*}",
        "file-processing${/*}",
        "activities-processing${/*}",
        "activities-processing/read-activities.js",
        "activities-processing/activity-db.db",
        "file-processing/file-maker.js",
        "file-processing/template-creator.js",
        "constants/file.enum"
    ],
    "win": {
        "icon": "dist/assets/icons",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "icon": "dist/assets/icons",
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "icon": "dist/assets/icons",
        "target": [
            "AppImage"
        ]
    }
}